<?xml version="1.0"?>
<DCAPP>
    <Variable Type="Float" InitialValue="0.5">RED</Variable>
    <Variable Type="Float" InitialValue="0.5">GREEN</Variable>
    <Variable Type="Float" InitialValue="0.5">BLUE</Variable>
    <Variable Type="Float" InitialValue="0.5">ALPHA</Variable>
    
    <Window X="30" Y="30" Width="600" Height="800" ActiveDisplay="1">
        <Constant Name="BgColor">0 0 0</Constant>
        <Constant Name="FgColor">1 1 1</Constant>
        
        <Defaults>
            <Button Y="7.5" Width="10" Height="10" HorizontalAlign="Center" VerticalAlign="Middle"/>
            <String Font="fonts/Calibri.ttf" Size="4" Color="0 0 0" HorizontalAlign="Center" VerticalAlign="Middle"/>
        </Defaults>
        
        <Style Name="Button">
            <String Size="3" Color="1 1 1" ShadowOffset=".2"/>
        </Style>
        
        <Panel DisplayIndex="1" BackgroundColor="#BgColor" VirtualWidth="100" VirtualHeight="100">
            <String X="50" Y="50" Color="1 1 1">A: @ALPHA(%.2f)</String>
            <Button Type="Momentary" X="50" Y="25">
                <OnPress><Set Variable="@ALPHA" Operator="+=" MaximumValue="100000">.05</Set></OnPress>
                <On><Image>button_on.tga</Image></On>
                <Off><Image>button_off.tga</Image></Off>
                <String Style="Button">Alpha\n+</String>
            </Button>
        </Panel>
    </Window>
</DCAPP>

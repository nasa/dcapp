#!/bin/sh

usage()
{
    cat <<EOF
Usage: $0 [OPTION]...
Get package compilation and linking information.

Options:
    --osspec    display default directory name extension
    --objdir    display default directory name for compiled objects
    --libdir    display default directory name for compiled libraries
    --bindir    display default directory name for compiled binaries
    --cflags    display required compilation flags
    --libs      display required linking flags
    --cflags_internal    display required compilation flags for building the package
EOF
    exit $1
}

if test $# -eq 0 ; then
    usage 1 1>&2
fi

CDPATH=""

mydir="$(cd "$(dirname "$0")/.."; pwd)"
parentdir="$(cd "$(dirname "$0")/../.."; pwd)"
ostype=`uname -s | tr '[:upper:]' '[:lower:]'`
machtype=`uname -m`
if test "$ostype" = "darwin" ; then
    osspec="MacOS"
else
    osspec="${ostype}_${machtype}"
fi
objdir="obj_${osspec}"
libdir="lib_${osspec}"
bindir="bin_${osspec}"

################################################################################
jpegturbopath="/usr/local/opt/jpeg-turbo"
jpegenabled=0
jpegturboenabled=0
if [[ -r /usr/include/jpeglib.h ]] ; then
    jpegenabled=1
fi
if [[ -r /usr/local/include/jpeglib.h ]] ; then
    jpegenabled=1
fi
if [[ -r ${jpegturbopath}/include/jpeglib.h ]] ; then
    jpegenabled=1
    jpegturboenabled=1
fi
################################################################################

while test $# -gt 0 ; do
    case $1 in
        --osspec)
            echo $osspec
            ;;
        --objdir)
            echo $objdir
            ;;
        --libdir)
            echo $libdir
            ;;
        --bindir)
            echo $bindir
            ;;
##### These are the only lines that should differ from package to package. #####
        --cflags)
            if test "$osspec" = "MacOS" ; then
                opengl_cflags="-I/opt/X11/include"
            else
                opengl_cflags="-I/usr/X11R6/include"
            fi
            echo "-I${parentdir} ${opengl_cflags} ${jpeg_cflags}"
            ;;
        --libs)
            if test "$osspec" = "MacOS" ; then
                opengl_libs="-framework OpenGL"
            else
                opengl_libs="-L/usr/X11R6/lib -lGL -lGLU"
            fi
            if test "jpegenabled" ; then
                jpeg_libs="-ljpeg"
            fi
            if test "jpegturboenabled" ; then
                jpeg_libs_path="-L${jpegturbopath}/lib"
            fi
            echo "-L${mydir}/${libdir} -limgload ${opengl_libs} ${jpeg_libs_path} ${jpeg_libs}"
            ;;
        --cflags_internal)
            if test "jpegenabled" ; then
                jpeg_define="-DJPEG_ENABLED"
            fi
            if test "jpegturboenabled" ; then
                jpeg_cflags="-I${jpegturbopath}/include"
            fi
            echo "-I${parentdir} ${jpeg_cflags} ${jpeg_define}"
            ;;
            
################################################################################
        *)
            usage 1 1>&2
            ;;
    esac
    shift
done

OSTYPE ?= $(shell tr '[:upper:]' '[:lower:]' <<< $(shell uname -s))
MACHTYPE ?= $(shell uname -m)

ifeq ($(OSTYPE), darwin)
OSSPEC := MacOS
X11_CFLAG = -I/opt/X11/include -I/usr/X11R6/include
X11_LFLAG = -L/opt/X11/lib -L/usr/X11R6/lib
else
OSSPEC := $(OSTYPE)_$(MACHTYPE)
X11_CFLAG = -I/usr/X11R6/include
X11_LFLAG = -L/usr/X11R6/lib
endif

OBJDIR := obj_$(OSSPEC)
LIBDIR := lib_$(OSSPEC)
BINDIR := dcapp.app/Contents/$(OSSPEC)

CC := c++
AR := ar
LD := c++

CFLAGS := -Wall
ARFLAGS := cr
LDFLAGS := 

# Note that LEGACY_CLEANUP and all references to it should be removed in 2015
LEGACY_CLEANUP := rm -rf obj_$(TRICK_HOST_CPU) lib_$(TRICK_HOST_CPU) bin_$(TRICK_HOST_CPU)
